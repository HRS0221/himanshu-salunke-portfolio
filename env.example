# Site Configuration
VITE_SITE_URL=https://himanshu.dev
VITE_SITE_NAME="Himanshu's Portfolio"
VITE_SITE_DESCRIPTION="AI/ML Engineer & Full-Stack Developer Portfolio"

# GitHub Integration (Optional)
# Get token from: https://github.com/settings/tokens
VITE_GITHUB_TOKEN=your_github_token_here
VITE_GITHUB_USERNAME=your_github_username

# Contact Form Integration (Required for Slack notifications)
# Slack webhook for contact form submissions
VITE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Analytics (Optional)
# Vercel Analytics - automatically enabled on Vercel deployments
VITE_VERCEL_ANALYTICS=true
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Social Media
VITE_TWITTER_HANDLE=your_twitter_handle
VITE_LINKEDIN_URL=https://linkedin.com/in/your-profile
VITE_GITHUB_URL=https://github.com/your-username

# Newsletter Integration
VITE_MAILCHIMP_API_KEY=your_mailchimp_api_key
VITE_MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Email Service (Optional)
# Resend API for contact form email notifications
VITE_RESEND_API_KEY=re_your_resend_api_key_here

# Development
NODE_ENV=development
VITE_DEV_SERVER_PORT=3000
VITE_DEV_MODE=true

# Build Configuration
VITE_BUILD_TARGET=esnext
VITE_SOURCEMAP=true
